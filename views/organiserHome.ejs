<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Sell page</title>
</head>
<body>
    <div>
        <form action="/logout" method="POST">
            <button type="submit">Log Out</button>
        </form>
    </div>

    <div>
        <h1>Organiser Home</h1>
        <h2><%= siteName %></h2>
        <p><%= siteDescription %></p>
        <h2>SiteSetting</h2>
        <a href="/siteSetting">Go to Site Settings</a>
    </div>

    <div>
        <h2>Create new Event</h2>
        <a href="/organiserHome/create">Create a new event</a>
    </div>
    
    <!-- remove time/state/ full tick/ concession in header -->
     <!-- add housing type/ price of property / housing location in the header -->
    <div>
        <h2>Draft property article</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Created</th>
                    <th>Last Modified</th>
                    <th>State</th>
                    <th>Full Price Tickets</th>
                    <th>Concession Tickets</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% draftEvents.forEach(event => { %>
                <tr>
                    <td><%= event.title %></td>
                    <td><%= event.event_date %></td>
                    <td><%= event.event_time %></td>
                    <td><%= event.creation_date %></td>
                    <td><%= event.last_modified_date %></td>
                    <td><%= event.state %></td>
                    <td><%= event.full_price_tickets %> @ $<%= event.full_price_ticket_price %></td>
                    <td><%= event.concession_tickets %> @ $<%= event.concession_ticket_price %></td>
                    <td>
                        <a href="/editEvent/<%= event.id %>">Edit</a>
                        <form action="/organiserHome/publish/<%= event.id %>" method="POST" style="display:inline;">
                            <button type="submit">Publish</button>
                        </form>
                        <form action="/organiserHome/delete/<%= event.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div>
        <h2>Published property article</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Created</th>
                    <th>Published</th>
                    <th>Full Price Tickets</th>
                    <th>Concession Tickets</th>
                    <th>Sharing Link</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% publishedEvents.forEach(event => { %>
                <tr>
                    <td><%= event.title %></td>
                    <td><%= event.event_date %></td>
                    <td><%= event.event_time %></td>
                    <td><%= event.creation_date %></td>
                    <td><%= event.published_date %></td>
                    <td><%= event.full_price_tickets %> @ $<%= event.full_price_ticket_price %></td>
                    <td><%= event.concession_tickets %> @ $<%= event.concession_ticket_price %></td>
                    <td><a href="/attEvent/<%= event.id %>">Event Page</a></td>
                    <td>
                        <form action="/viewBooking/<%= event.id %>" method="POST" style="display:inline;">
                            <button type="submit">View buyers information</button>
                        </form>
                        <form action="/organiserHome/delete/<%= event.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete article</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
