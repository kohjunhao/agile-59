    <title>user profile Page</title>
</head>
<body>

    <header>
        <div class="header-container">
            <div class="finder-logo">
                <a href="/"><img class="logo" src="/logo3.jpg" alt="NextDoorSG logo"></a>
            </div>

            <div class="nav-link-container">
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/buyRentHome">Buy/rent</a>
                    <a href="/sellerHome">Sell</a>
                    <a href="/projectHome">New projects</a>
                    <a href="/tools">Tools</a>
                    <a href="#">Find agent</a>
                </div>
            </div>
            
            <div class="userPfp">
                <a href="/userProfile">welcome <%= user.user_name %></a>
            </div>

            <div class="logout-btn">
                <form action="/logout" method="POST">
                    <button type="submit">Log Out</button>
                </form>
            </div>
        </div>
    </header>

    <div class="pfp-container">
        
        <div class="user-pfp-header">
            <h1>Edit profile</h1>
        </div>

        <div class="pfp-input-content">
            <form action="/userProfile" method="POST">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" value="<%= user.user_name %>" pattern="[A-Za-z]+"  required>
                <br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" required>
                <br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password"  pattern="(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}">
                <br>
                <button type="submit">Update</button>
            </form>
        </div>
    </div>

    <br>

    <footer>
