    <script>
        ///JS for slider///
        // Initialize the page index to 1 and display the first slide
        let pageIndex = 1;
        displaySlides(pageIndex);
  
        // Function to change the image slide 
        function changeImg(n) {
            displaySlides(pageIndex += n);
        }
  
        // Function to show a specific slide when a dot is clicked
        function currentSlide(n) {
            displaySlides(pageIndex = n);
        }
  
        // Function to display the slides
        function displaySlides(n) {
            let i;
            let slides = document.getElementsByClassName("slide");
            let dots = document.getElementsByClassName("dot");

            // Check if n is out of bounds and adjust pageIndex accordingly
            if (n > slides.length) {pageIndex = 1}    
            if (n < 1) {pageIndex = slides.length}

            // Hide the slides
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";  
            }

            // Remove the "active" class from all dots
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }

            // Display the current slide and 
            slides[pageIndex-1].style.display = "block";

            //Mark the corresponding dot as "active"
            dots[pageIndex-1].className += " active";  
        }

