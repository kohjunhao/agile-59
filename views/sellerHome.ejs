<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/sellerHome.css" />
    <title>Sell page</title>
</head>
<body>

    <header>
        <div class="header-container">
            <div class="finder-logo">
                <a href="/"><img class="logo" src="/logo3.jpg" alt="NextDoorSG logo"></a>
            </div>

            <div class="nav-link-container">
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/buyRentHome">Buy/rent</a>
                    <a href="/sellerHome">Sell</a>
                    <a href="/projectHome">New projects</a>
                    <a href="/tools">Tools</a>
                    <a href="#">Find agent</a>
                </div>
            </div>
            
            <div class="userPfp">
                <a href="/userProfile">welcome <%= user.user_name %></a>
            </div>

            <div class="logout-btn">
                <form action="/logout" method="POST">
                    <button type="submit">Log Out</button>
                </form>
            </div>
        </div>
    </header>


    <div class="create-container">
        <h2>Create new property for sale</h2>
        <a href="/sellerHome/create">Create a new property listing</a>
    </div>
    
    <div class="draft-container">
        <h2>Draft property article</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Last Modified</th>
                    <th>State</th>
                    <th>location</th>
                    <th>Housing type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% draftArticles.forEach(article => { %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.creation_date %></td>
                    <td><%= article.last_modified_date %></td>
                    <td><%= article.state %></td>
                    <td><%= article.location %></td>
                    <td><%= article.housingType %></td>
                    <td><%= article.status %></td>
                    <td>
                        <a href="/editArticle/<%= article.id %>">Edit</a>
                        <form action="/sellerHome/publish/<%= article.id %>" method="POST" style="display:inline;">
                            <button type="submit">Publish</button>
                        </form>
                        <form action="/sellerHome/delete/<%= article.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="publish-container">
        <h2>Published property article</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Published</th>
                    <th>Housing type</th>
                    <th>status </th>
                    <th>To article</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% publishedArticles.forEach(article => { %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.creation_date %></td>
                    <td><%= article.published_date %></td>
                    <td><%= article.housingType %></td>
                    <td><%= article.status %></td>
                    <td><a href="/buyRentArticle/<%= article.id %>">Article Page</a></td>
                    <td>
                        <form action="/sellerHome/delete/<%= article.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete article</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <footer>
        <div class="footer-container">
            <div class="footer-row">
                <h3>NextDoorSG</h3>
                <p>Follow us here:</p>
                <a href="#"><img src="https://img.icons8.com/ios/50/facebook--v1.png" alt="Facebook logo" ></a>
                <a href="#"><img src="https://img.icons8.com/ios/50/twitterx--v1.png" alt="X logo" ></i></a>
                <a href="#"><img src="https://img.icons8.com/ios/50/instagram-new--v1.png" alt="Insta logo" ></i></a>
                <a href="#"><img src="https://img.icons8.com/ios/50/youtube-play--v1.png" alt="Youtube logo" ></i></a>
            </div>
         
            <div class="footer-col">
                <ul>
                    <li><a href="/projectHome">New Projects</a></li>
                    <li><a href="/tools">Tools</a></li>
                    <li><a href="#">Find Agents</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Term of Service</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <ul>
                    <li><a href="#">Sitemap</a></li>
                    <li><a href="#">Licenses</a></li>
                    <li><a href="#">Mobile App</a></li>
                    <li><a href="#">Term of Service</a></li>
                </ul>
            </div>
   
            <div class="footer-bottom">
                <p><small>&copy;NextDoorSG. All rights reserved. Images are for illustrative purposes</small></p>
                <p><small>Terms and conditions apply</small></p>
            </div>
        </div>
    </footer>

</body>
</html>
